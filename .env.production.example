# Production Environment Variables for SD-Ghost Protocol MCP Server
# Copy this to .env.production and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Database Configuration (for migrations)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# AI Model API Keys (Store these securely in Supabase Vault)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
GEMINI_API_KEY=your-gemini-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
MISTRAL_API_KEY=your-mistral-api-key

# MCP Server Configuration
MCP_SERVER_NAME=sd-ghost-protocol
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=0.0.0.0

# Hostinger Deployment
NODE_ENV=production
PORT=3000

# Security
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=https://your-domain.com,https://claude.ai

# Monitoring
ENABLE_TELEMETRY=true
SENTRY_DSN=your-sentry-dsn-if-using

# Feature Flags
ENABLE_TOOL_ORCHESTRATION=true
ENABLE_MEMORY_SEARCH=true
ENABLE_SESSION_PERSISTENCE=true
MAX_MEMORY_CONTEXT_SIZE=10
SIMILARITY_THRESHOLD=0.7